{
  "name": "common-ekosystem",
  "packageManager": "pnpm@10.1.0",
  "standard": {
    "globals": [
      "describe",
      "it",
      "expect",
      "beforeEach",
      "afterEach",
      "Image"
    ],
    "ignore": [
      "dist/**"
    ]
  },
  "lint-staged": {
    "*.{js,cjs,mjs}": [
      "pnpm lint"
    ]
  },
  "scripts": {
    "prepare": "husky",
    "lint": "standard 'packages/**/*.js' --fix",
    "lint:check": "pnpm run lint -- 'packages/check/**/*.js'",
    "lint:geokit": "pnpm run lint -- 'packages/geokit/**/*.js'",
    "lint:graphiks": "pnpm run lint -- 'packages/graphiks/**/*.js'",
    "test": "vitest run --coverage",
    "test:check": "pnpm run test --project check",
    "test:geokit": "pnpm run test --project geokit",
    "test:graphiks": "pnpm run test --project graphiks",
    "build": "pnpm run build:check && pnpm run build:geokit && pnpm run build:graphiks",
    "build:check": "pnpm --filter @kalisio/check build",
    "build:geokit": "pnpm --filter @kalisio/geokit build",
    "build:graphiks": "pnpm --filter @kalisio/graphiks build"
  },
  "keywords": [
    "check",
    "graphiks",
    "geokit",
    "ekosystem",
    "kalisio"
  ],
  "author": {
    "name": "KALISIO <contact@kalisio.com>",
    "url": "https://github.com/kalisio"
  },
  "contributors": [],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/kalisio/common-ekosystem.git"
  },
  "bugs": {
    "url": "https://github.com/kalisio/common-ekosystem/issues"
  },
  "homepage": "git://github.com/kalisio/common-ekosystem#readme",
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.17",
    "cross-env": "^10.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "standard": "^17.1.2",
    "vite": "^7.1.9",
    "vitest": "^4.0.17"
  }
}
